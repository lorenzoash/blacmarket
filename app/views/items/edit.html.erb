<h5>Editing items</h5>



<%= form_for @item do |f| %>
    <div class="form-group">
        <%= f.label :title, "Title"%>
        <%= f.text_field :title, class: 'form-control' %>
   </div>
   <div class= "form-group">
        <%= f.label :price, "Price" %>
        <%= f.number_field :price, value: 1, class: 'form-control', min: 1 %>
  </div>
 <div class="form-group">
    <%= f.label :content, "Description" %>
    <%= f.text_area :content, class: 'form-control' %>
    <%= f.file_field :image %>
 </div>   
    <%= f.submit "Post", class: 'btn btn-success' %>
    <% end %>


<%= link_to 'Show', @item %> |
<%= link_to 'Back', items_path %>